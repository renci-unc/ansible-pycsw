provider_url=http://csw.renci.org/
contact_name=Blanton, Brian
contact_position=Director of Environmental Sciences
contact_address=100 Europa Drive, Suite 540
contact_city=Chapel Hill
contact_stateorprovince=NC
contact_postalcode=27518
contact_country=USA
contact_phone=+1-919-445-9620
contact_fax=+1-919-445-9669
contact_email=bblanton@renci.org
contact_url=http://renci.org
contact_hours=9am-5pm, M-F
contact_instructions=During hours of service.  Off on weekends.
contact_role=pointOfContact

[repository]
